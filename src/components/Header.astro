---
import { SITE_TITLE } from '../consts';
---

<header>
	<h1><a href="/">{SITE_TITLE}</a></h1>
</header>
<style>
	header {
	    width: 960px;
	    max-width: calc(100% - 2em);
		margin: 2em auto;
		padding: 0;
	}
	a {
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
</style>
